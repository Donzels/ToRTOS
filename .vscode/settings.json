{
  /* Set how to handle untrusted files: can choose to open, view, or be blocked. */
  "security.workspace.trust.untrustedFiles": "open",

  /* Set the default encoding of files to utf8. */
  "files.encoding": "utf8",
  
  /* Automatically guess file encoding, suitable for opening files with unknown encoding. */
  "files.autoGuessEncoding": true,

